package ConversorMoneda;

import javax.swing.JOptionPane;

import Errores.ErroresMoneda;
import Servicio.MonedaServicio;

public class ConversorMoneda {

	public static void main(String[] args) throws ErroresMoneda {
		
		MonedaServicio ms = new MonedaServicio();
		
		String[] conversores = {
				"Conversor de monedas",
				"Conversor de temperatura",
				"Conversor de medidas de longitud",
		};
		
		String respuestaMenu = (String) JOptionPane.showInputDialog(null, "Seleccione el conversor que desea");
		
		String respuesta = (String) JOptionPane.showInputDialog(null, "Seleccione el conversor que desea", "Conversores", JOptionPane.DEFAULT_OPTION, null, conversores, conversores[0]);
		
		JOptionPane.showMessageDialog(null, "Usted eligi√≥: " + respuesta);
		
		String conversor[] = new String[3];
		
		conversor[0] = "Conversor de monedas";
		conversor[1] = "Conversor de temperatura";
		conversor[2] = "Conversor de medidas de longitud";
		
		
		System.out.println("Hola mundo!");
	}

}
