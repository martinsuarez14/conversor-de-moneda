package Servicio;

import java.awt.HeadlessException;

import javax.swing.JOptionPane;

import Errores.ErroresMoneda;

public class MenuServicio {

	private MonedaServicio ms;

	public MenuServicio() {
		this.ms = new MonedaServicio();
	}

	public void menu() throws ErroresMoneda {

		String[] conversores = { 
				"Conversor de monedas", 
				"Conversor de temperatura",
				"Conversor de medidas de longitud", };
		
		String[] conversoresDeMonedas = {
				"De Peso a Dolar",
				"De Peso a Euro",
				"De Peso a Libras Esterlinas",
				"De Peso a Won Surcoreano",
				"De Peso a Yen Japonés",
				"De Dolar a Peso",
				"De Euro a Peso",
				"De Libras Esterlinas a Peso",
				"De Won Surcoreano a Peso",
				"De Yen Japonés a Peso"
		};
		
		String[] salir = {
				"Si",
				"No"
		};

		boolean flag = true;

		while (flag = true) {
			String opcionMenu = (String) JOptionPane.showInputDialog(null, "Seleccione el conversor que desea",
					"Conversores", JOptionPane.DEFAULT_OPTION, null, conversores, conversores[0]);

			switch (opcionMenu) {
				case "Conversor de monedas":
					
					String respuestaConversorMoneda =(String) JOptionPane.showInputDialog(null, "Seleccione el cambio de divisas que desea", 
							"Conversores de Monedas", JOptionPane.DEFAULT_OPTION, null, conversoresDeMonedas, conversoresDeMonedas[0]);

					switch (respuestaConversorMoneda) {
						case "De Peso a Dolar":
							double montoPesoDolar = Double.parseDouble(JOptionPane.showInputDialog(null, "Ingrese el monto a convertir"));
							JOptionPane.showMessageDialog(null, "$" + montoPesoDolar + " equivalen a $" + ms.dePesoADolar(montoPesoDolar) + " dólares.");
							break;
						case "De Peso a Euro":
							double montoPesoEuro = Double.parseDouble(JOptionPane.showInputDialog(null, "Ingrese el monto a convertir", respuestaConversorMoneda));
							break;
						case "De Peso a Libras Esterlinas":
							double montoPesoLibras = Double.parseDouble(JOptionPane.showInputDialog(null, "Ingrese el monto a convertir", respuestaConversorMoneda));
							break;
						case "De Peso a Won Surcoreano":
							double montoPesoWon = Double.parseDouble(JOptionPane.showInputDialog(null, "Ingrese el monto a convertir", respuestaConversorMoneda));
						
							break;
						case "De Peso a Yen Japonés":
							double montoPesoYen = Double.parseDouble(JOptionPane.showInputDialog(null, "Ingrese el monto a convertir", respuestaConversorMoneda));
						
							break;
						case "De Dolar a Peso":
							double montoDolarPeso = Double.parseDouble(JOptionPane.showInputDialog(null, "Ingrese el monto a convertir", respuestaConversorMoneda));
							break;
						case "De Euro a Peso":
							double montoEuroPeso = Double.parseDouble(JOptionPane.showInputDialog(null, "Ingrese el monto a convertir", respuestaConversorMoneda));
							
							break;
						case "De Libras Esterlinas a Peso":
							double montoLibrasPeso = Double.parseDouble(JOptionPane.showInputDialog(null, "Ingrese el monto a convertir", respuestaConversorMoneda));
							
					
							break;
						case "De Won Surcoreano a Peso":
							double montoWonPeso = Double.parseDouble(JOptionPane.showInputDialog(null, "Ingrese el monto a convertir", respuestaConversorMoneda));
							
						
							break;
						case "De Yen Japonés a Peso":
							double montoYenPeso = Double.parseDouble(JOptionPane.showInputDialog(null, "Ingrese el monto a convertir", respuestaConversorMoneda));
						
							break;
						}
					
							break;
				case "Conversor de temperatura":

					break;
				case "Conversor de medidas de longitud":

					break;
			}

			String continuarSalir = (String) JOptionPane.showInputDialog(null, "¿Desea cerrar el programa?",
					"Alerta!", JOptionPane.DEFAULT_OPTION, null, salir, salir[0]);

			//if (continuarSalir.equals("Si")) {
			//	flag = false;
			//}
			
			if (continuarSalir == "Si") {
				flag = false;
			}
		}

	}
}
